
<%= render "shared/header" %>

<div class='book-index'>
  <div class='top-content'>
    <h1 class='title'>書籍一覧</h1> 
    <%= link_to '本を追加する',new_book_path, class: 'book-btn'  %>
  </div>

  <ul class='book-lists'>
  
    <% @book.each do |book|%>
      <li class='list'>
        <div class='book-image'>
          <%= image_tag book.image.variant(resize: '350x500'), class: "book-img" %>
        </div>
        <h3 class='book-title'>
          <span>本のタイトル：<%= book.book_title %></span>
        </h3>
        <div class='level-of-achievement'>
          <span><%= book.total_page %>ページ</span>
        </div>
      </li>
    <%end%>
    
    
   <li class='list'>
    <div class='book-title'>本のタイトル</div>
    <div class='book-image'>画像</div>
    <div class='level-of-achievement'>達成度</div>
   </li>
   
  </ul>

</div>